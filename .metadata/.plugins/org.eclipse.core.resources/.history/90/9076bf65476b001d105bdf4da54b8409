		if(n!=1 &&n!=2 &&n!=3&&n!=4) {
			System.out.println("번호를 잘못 입력했습니다.");
			}else if(n==9){
				System.out.println("프로그램을 종료합니다.");
				System.exit(0);
			}else {
			}
		}
		if(n==1) insertEmp();
		if(n==2) updateEmp();
		if(n==3) deleteEmp();
		if(n==4) printEmp();
		
	}
